{
  "regions": ["hnd1"],
  "crons": [
    {
      "path": "/api/cron/poll-systems",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/cleanup",
      "schedule": "0 2 * * *"
    },
    {
      "path": "/api/cron/aggregate-daily",
      "schedule": "5 0 * * *"
    }
  ],
  "functions": {
    "app/api/cron/poll-systems/route.ts": {
      "maxDuration": 60
    },
    "app/api/history/route.ts": {
      "maxDuration": 30
    }
  }
}